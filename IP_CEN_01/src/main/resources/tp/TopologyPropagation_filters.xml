<?xml version="1.0" encoding="UTF-8" ?>
<filters xmlns="http://hp.com/uca/expert/filter">

    <topFilter name="TopologyUpdate" tagsGroup="none">
        <anyCondition>
            <!-- listen for topology update events (via topology flow) -->
            <orchestrationTypeFilterStatement>
                <orchestrationTypeValue>TopologyEvent</orchestrationTypeValue>
            </orchestrationTypeFilterStatement>
        </anyCondition>
    </topFilter>

</filters>
